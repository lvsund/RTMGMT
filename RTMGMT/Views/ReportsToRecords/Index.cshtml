@model IEnumerable<RTMGMT.Models.ReportsToRecord>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@

    @Html.ActionLink("Import Records", "ImportRecords") |@Html.ActionLink("Create Reporting Hierarchy", "CreateReportingHierarchy")|@Html.ActionLink("Delete All Data", "DeleteAllData")|@Html.ActionLink("Clear Processing Tables", "ClearProcessingTables")|@Html.ActionLink("Export Reports To Records", "ExportReportsToRecords")
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title"> Reports To Records</h1>
            </div>
            <div class="panel-body">
                <table id="ReportsToRecords-data-table"
                       class="table table-striped table-bordered"
                       style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.REPORTING_ID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TITLE)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NAME)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.REPORTS_TO_ID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EMPLOYEE_ID)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.REPORTING_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TITLE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.REPORTS_TO_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EMPLOYEE_ID)
                                </td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
                {
    <script type="text/javascript">
        $(document).ready(function () {

            $('#ReportsToRecords-data-table').DataTable();

        });
    </script>
    <script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.4/css/jquery.dataTables.min.css">

}